<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/two_rows_linear_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id = "@+id/order_item_top"
        android:visibility="invisible"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id = "@+id/countdown_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:padding = "2dp"/>

        <TextView
            android:layout_below="@id/countdown_text"
            android:id = "@+id/order_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:textSize="20sp"
            android:background = "@color/dark_blue"
            android:textColor = "@color/white"
            android:text = "Order ID"/>

        <ListView
            android:id = "@+id/line_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id = "@+id/done_button"
            android:layout_alignParentBottom="true"
            android:background = "@color/dark_blue"
            android:textColor = "@color/white"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:padding="2dp"
            android:textSize="20sp"
            android:text = "UNDO"/>

    </RelativeLayout>

    <RelativeLayout
        android:id = "@+id/order_item_bottom"
        android:visibility="invisible"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id = "@+id/countdown_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:padding = "2dp" />

        <TextView
            android:layout_below = "@id/countdown_text2"
            android:id = "@+id/order_id_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:background = "@color/dark_blue"
            android:textColor = "@color/white"
            android:textSize="20sp"
            android:text = "Order ID"/>

        <ListView
            android:id = "@+id/line_item_list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id = "@+id/done_button2"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:textColor = "@color/white"
            android:background="@color/dark_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:padding = "2dp"
            android:text = "UNDO"/>

    </RelativeLayout>

</LinearLayout>