<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:id = "@+id/overflow_linear_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id = "@+id/order_relative_layout"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

    <TextView
        android:id = "@+id/countdown_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:padding = "2dp" />

    <TextView
        android:layout_below = "@id/countdown_text"
        android:id = "@+id/order_id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:background = "@color/dark_blue"
        android:textColor="@color/white"
        android:text = "Order ID"/>

    <Button
        android:id = "@+id/done_button"
        android:background="@color/dark_blue"
        android:textColor = "@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:padding="2dp"
        android:text = "DONE"/>

    <ListView
        android:layout_above="@id/done_button"
        android:layout_below = "@+id/order_id_text"
        android:id = "@+id/line_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"/>

    </RelativeLayout>

</LinearLayout>
